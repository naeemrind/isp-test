{
  "name": "isp",
  "private": true,
  "version": "0.0.0",
  "description": "ISP Management System",
  "author": "Naeem",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "electron .",
    "electron:pack": "vite build && electron-builder --win nsis"
  },
  "build": {
    "appId": "com.galaxyisp.app",
    "productName": "Galaxy ISP",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true
    }
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.2.1",
    "concurrently": "^9.2.1",
    "dexie": "^4.3.0",
    "html-to-image": "^1.11.13",
    "lucide-react": "^0.575.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "repomix": "^1.12.0",
    "tailwindcss": "^4.2.1",
    "uuid": "^13.0.0",
    "wait-on": "^9.0.4",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "vite": "^7.3.1",
    "electron": "^40.6.1",
    "electron-builder": "^26.8.1"
  }
}
